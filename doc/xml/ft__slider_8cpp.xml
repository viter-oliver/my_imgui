<sp/><sp/><sp/><sp/><sp/>pos1<sp/>+=<sp/>_slider_pt._thumb_pos;
<sp/><sp/><sp/><sp/><sp/>pos2<sp/>+=<sp/>_slider_pt._thumb_pos;
<sp/><sp/><sp/><sp/><sp/>pos3<sp/>+=<sp/>_slider_pt._thumb_pos;
<sp/><sp/><sp/><sp/><sp/>pos4<sp/>+=<sp/>_slider_pt._thumb_pos;

<sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/>ImGui::ImageQuad((ImTextureID)texture_id,<sp/>pos1,<sp/>pos2,<sp/>pos3,<sp/>pos4,<sp/>uv0,<sp/>uv1,<sp/>uv2,<sp/>uv3);
<sp/>}
<sp/><sp/>else
<sp/><sp/><sp/>{
<sp/><sp/><sp/><sp/><sp/><sp/>if<sp/>(_slider_pt._texture_thumb_index<sp/>&gt;=<sp/>ptext_cd.size())
<sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/>{
