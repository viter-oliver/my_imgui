<sp/><sp/><sp/><sp/><sp/><sp/><sp/>ImVec2<sp/>_center_positon_point<sp/>=<sp/>ImVec2((_current_point_2vec2_thumb_use.top_point.x<sp/>+<sp/>_current_point_2vec2_thumb_use.bottom_point.x)<sp/>/<sp/>2,<sp/>(_current_point_2vec2_thumb_use.top_point.y<sp/>+<sp/>_current_point_2vec2_thumb_use.bottom_point.y)/2);
