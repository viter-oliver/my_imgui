<sp/><sp/><sp/><sp/><sp/>pos3<sp/>=<sp/>ImVec2(abpos.x<sp/>+<sp/>winpos.x<sp/>+<sp/>_center_positon_point.x<sp/>+<sp/>_thumb_texture_size.x<sp/>/<sp/>2,<sp/>abpos.y<sp/>+<sp/>winpos.y<sp/>+<sp/>_center_positon_point.y<sp/>+<sp/>_thumb_texture_size.y<sp/>/<sp/>2);
<sp/><sp/><sp/><sp/><sp/>pos4<sp/>=<sp/>ImVec2(abpos.x<sp/>+<sp/>winpos.x<sp/>+<sp/>_center_positon_point.x<sp/>+<sp/>_thumb_texture_size.x<sp/>/<sp/>2,<sp/>abpos.y<sp/>+<sp/>winpos.y<sp/>+<sp/>_center_positon_point.y<sp/>-<sp/>_thumb_texture_size.y<sp/>/<sp/>2);

<sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/>//依靠父节点的坐标和角度计算
<sp/><sp/><sp/><sp/><sp/><sp/>if<sp/>(_slider_pt._bg_angle<sp/>!=<sp/>0.f)
<sp/><sp/><sp/><sp/><sp/><sp/><sp/>{
<sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/>pos1<sp/>=<sp/>rotate_point_by_zaxis(pos1,<sp/>_slider_pt._bg_angle,<sp/>axisBasePos);
<sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/><sp/>pos2<sp/>=<sp/>rotate_point_by_zaxis(pos2,<sp/>_slider_pt._bg_angle,<sp/>axisBasePos);
